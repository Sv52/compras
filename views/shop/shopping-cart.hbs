{{# if products}}

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{# each products}}

        <li class="nav-item dropdown">
            
            <strong>{{this.item.title}}</strong>
            <span class="badge badge-success">${{this.price}}</span>
            <a class="badge badge-primary nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Algo
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/reduce/{{this.item._id}}">Quitar 1</a>
                <a class="dropdown-item" href="/remove/{{this.item._id}}">Quitar todos</a>
            </div>
            <span class="badge badge-pill badge-secondary">{{this.qty}}</span>
       </li>

        {{/each}}    

      </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: {{this.totalPrice}}</strong>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Comprar</a>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>Ningun articulo en el carro</h2>
  </div>
</div>
{{/if}}



