
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="succes" class="alert alert-success {{#if noMessages}}d-none{{/if}}" >
            {{successMsg}}
        </div>
    </div>
</div>

{{# each products}}
<div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="{{this.imagePath}}" class="card-img-top image-responsive" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div class="clearfix">
                     <div class="pull-left">{{this.price}}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right">Agregar al carrito</a>    
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}




